<table>
  <thead>
  <tr>
    <th class="timestamp">Timestamp</th>
    <th class="url">URL</th>
    <th class="keywords">Keywords</th>
    <th class="delete"></th>
  </tr>
  </thead>
  <tbody>
  <% @logs.each_with_index do |log, index| %>
      <tr>
        <td class="timestamp" title="<%= log.timestamp %>"><%= time_ago_in_words(log.timestamp) %></td>
        <td class="url"><a href="<%= log.page.url %>" title="<%= log.page.url %>"><%= log.page.url[1..50] %></a></td>
        <td class="keywords"><%= log.page.keywords.gsub(/,(?=\S+?)/, ', ') %></td>
        <td class="delete"><%= link_to "delete", {:action => :delete, :id => index}, {:confirm => "are you sure?", :method => :post} %>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @logs %>
